{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install --registry=https://registry.npmjs.org/ --legacy-peer-deps",
  "devCommand": "npm run serve",
  "routes": [
    { "src": "/(.*)", "dest": "/" }
  ],
  "env": {
    "NODE_OPTIONS": "--max_old_space_size=4096"
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max_old_space_size=4096"
    }
  }
} 